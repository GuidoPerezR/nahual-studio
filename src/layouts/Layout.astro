---
import AnnouncementBar from '@/components/AnnouncementBar.astro';
import Header from '@/components/Header.astro';
import Footer from '@/sections/Footer.astro';
import '@/styles/global.css';
// import Analytics from '@vercel/analytics/astro';
import GeneralSans from '@/styles/fonts/general-sans/GeneralSans-Variable.woff2';
import TankerFont from '@/styles/fonts/tanker/Tanker-Regular.woff2';
import { ClientRouter } from 'astro:transitions';

const {
  title = 'Nahual Studio - Estudio de Diseño Gráfico',
  description = 'Estudio de diseño gráfico especializado en branding y fotografía profesional. Creamos identidades visuales impactantes y atractivas para impulsar el crecimiento de tu marca.',
  canonical,
} = Astro.props;
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />

    {canonical && <link rel="canonical" href={canonical} />}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image" content="/images/og-image.webp" />
    <meta property="og:image:alt" content="Imagen del logo de Nahual Studio" />
    <meta name="robots" content="index, follow" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="nahual-studio.vercel.app" />
    <meta property="twitter:url" content="https://nahual-studio.vercel.app/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-image.webp" />

    <!-- Precargar fuente para que no se vea el salto entre fuentes -->
    <link
      rel="preload"
      href={TankerFont}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href={GeneralSans}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta
      name="google-site-verification"
      content="cfxgXsNUujf4mhshsqpTvkJGRofz4tomizMSwQRsuvE"
    />
  </head>
  <ClientRouter />
  <!-- <Analytics /> -->

  <body>
    <Header />
    <AnnouncementBar />
    <slot />
    <Footer />
  </body>


</html>
