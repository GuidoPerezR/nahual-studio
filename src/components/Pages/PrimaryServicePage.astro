---
import Layout from '@/layouts/Layout.astro';
import Image from 'astro/components/Image.astro';

import Boda1 from '@/assets/images/boda-1.png';
import Button from '@/components/Button.astro';
import BackgroundHero from '../Sections/BackgroundHero.astro';

interface Props {
  title: string;
  backdrop: string;
}

const { title, backdrop } = Astro.props;
---

<Layout>
  <BackgroundHero backdrop={backdrop}>
    <h1
      class="text-light-lily text-header-1-mobile md:text-header-1 leading-header font-tanker absolute left-1/2 top-1/2 max-w-md -translate-x-1/2 -translate-y-1/2 text-center uppercase"
    >
      {title}
    </h1>
  </BackgroundHero>

  <section
    class="bg-light-blue grid items-center px-5 py-16 md:grid-cols-2 md:gap-28 md:px-24 md:py-20"
  >
    <Image
      src={Boda1}
      alt={'A photo'}
      class={'w-full h-full object-cover rounded-image select-none'}
      loading={'lazy'}
      draggable={false}
    />

    <div class="mt-16 max-w-sm md:mt-0">
      <h2
        class="text-light-lily text-header-2-mobile md:text-header-2 leading-header font-tanker mb-4"
      >
        Lorem ipsum dolor sit
      </h2>
      <p class="text-light-lily leading-paragraph font-general-sans">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate
        libero et velit interdum, ac aliquet odio mattis.
      </p>
    </div>
  </section>

