---
interface Props {
  label: string;
  outline?: boolean;
}

const { label, outline = false } = Astro.props;
---

<button
  class:list={[
    'rounded-button font-general-sans cursor-pointer px-3 py-2 text-center font-semibold',
    {
      'bg-light-blue text-light-lily': !outline,
    },
    {
      'border-light-blue text-light-blue border-2 bg-transparent': outline,
    },
  ]}>{label}</button
>
