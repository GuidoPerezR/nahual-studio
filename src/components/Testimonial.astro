---
import NoUser from '@/assets/icons/no-user.svg';
import Quotation from '@/assets/icons/quotation.svg';
import Paragraph from '@/components/Paragraph.astro';
const { text, image, author, jobTitle } = Astro.props;
---

<article
  class="bg-light-lily h-full w-[345px] max-w-[476px] flex-1 rounded-2xl p-6 md:absolute md:inset-0 md:w-full md:rounded-3xl"
>
  <div class="flex h-full flex-col justify-between">
    <Quotation />
    <Paragraph style="dark" class="mt-4">
      {text}
    </Paragraph>
    <footer class="mt-6 flex items-center gap-3.5">
      {
        image ? (
          <img
            src={image}
            alt=""
            class="size-12 select-none rounded-full object-cover"
            draggable="false"
          />
        ) : (
          <span class="rounded-full bg-gray-400">
            <NoUser class="text-light-lily size-12 p-3" />
          </span>
        )
      }

      <div>
        <p class="text-light-blue font-general-sans font-semibold">
          {author}
        </p>
        {
          jobTitle && (
            <p class="text-light-blue font-general-sans text-[15px]">
              {jobTitle}
            </p>
          )
        }
      </div>
    </footer>
  </div>
</article>
