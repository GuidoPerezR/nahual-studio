---
import Grid1 from '@/assets/images/fotografias/gastronomicas/grid-1.webp';
import Grid2 from '@/assets/images/fotografias/gastronomicas/grid-2.webp';
import Grid3 from '@/assets/images/fotografias/gastronomicas/grid-3.webp';
import Grid4 from '@/assets/images/fotografias/gastronomicas/grid-4.webp';
import Grid5 from '@/assets/images/fotografias/gastronomicas/grid-5.webp';
import PrimaryImage from '@/assets/images/fotografias/gastronomicas/primary.webp';
import BackgroundHero from '@/components/Sections/BackgroundHero.astro';
import SecondaryBento from '@/components/Sections/SecondaryBento.astro';
import SecondaryTextImage from '@/components/Sections/SecondaryTextImage.astro';
import Layout from '@/layouts/Layout.astro';

const primaryImage = {
  image: PrimaryImage,
  alt: 'Postre con galleta decorada',
};

const bentoImages = [
  {
    image: Grid1,
    alt: 'Pastel de chocolate y fresa decorado con perlas de azúcar',
  },
  { image: Grid2, alt: 'Pastel de chocolate con perlas de azúcar' },
  { image: Grid3, alt: 'Postre de fresa con perlas de azúcar' },
  { image: Grid4, alt: 'Galleta con el logo de Cakes by Pao' },
  {
    image: Grid5,
    alt: 'Pastel de chocolate y fresa con perlas de azúcar y crema batida',
  },
];
---

<Layout>
  <BackgroundHero backdrop="/images/background/gastronomicas.webp">
    <h1
      class="text-light-lily anim-title text-header-1-mobile xl:text-header-1 leading-header font-tanker absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center uppercase md:max-w-xl"
    >
      Fotografía Gastronómica
    </h1>
  </BackgroundHero>

  <SecondaryTextImage
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    image={primaryImage}
  />

  <SecondaryBento
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    buttonLabel="¡Agenda ahora!"
    images={bentoImages}
  />
</Layout>
