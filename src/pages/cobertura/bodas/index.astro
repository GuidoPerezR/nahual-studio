---
import Grid1 from '@/assets/images/coberturas/bodas/grid-1.webp';
import Grid2 from '@/assets/images/coberturas/bodas/grid-2.webp';
import Grid3 from '@/assets/images/coberturas/bodas/grid-3.webp';
import Grid4 from '@/assets/images/coberturas/bodas/grid-4.webp';
import Grid5 from '@/assets/images/coberturas/bodas/grid-5.webp';
import PrimaryImage from '@/assets/images/coberturas/bodas/primary.webp';
import BackgroundHero from '@/components/Sections/BackgroundHero.astro';
import PrimaryBento from '@/components/Sections/PrimaryBento.astro';
import PrimaryTextImage from '@/components/Sections/PrimaryTextImage.astro';
import Layout from '@/layouts/Layout.astro';

const primaryImage = {
  image: PrimaryImage,
  alt: 'La pareja de novios dándose un beso',
};

const bentoImages = [
  {
    image: Grid1,
    alt: 'La pareja de novios sosteniendo un cartel de Kiss Cam',
  },
  { image: Grid2, alt: 'La novia recostada en el hombro del novio' },
  { image: Grid3, alt: 'Los novios en el altar' },
  { image: Grid4, alt: 'Una canasta con flores blancas' },
  { image: Grid5, alt: 'La novia caminando hacia el altar' },
];

const title = 'Cobertura de bodas | Nahual Studio - Estudio de Diseño Gráfico';
const description =
  'Infórmate sobre nuestro servicio de Cobertura de bodas y agenda con nosotros tu próximo evento.';
const canonical = 'https://nahual-studio.vercel.app/cobertura/bodas';
---

<Layout title={title} description={description} canonical={canonical}>
  <BackgroundHero backdrop="/images/background/bodas.webp">
    <h1
      class="text-light-lily anim-title text-header-1-mobile xl:text-header-1 leading-header font-tanker absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center uppercase md:max-w-xl"
    >
      Cobertura de bodas
    </h1>
  </BackgroundHero>

  <PrimaryTextImage
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    image={primaryImage}
  />

  <PrimaryBento
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    buttonLabel="¡Agenda ahora!"
    images={bentoImages}
  />
</Layout>
