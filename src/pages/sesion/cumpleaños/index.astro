---
import Grid1 from '@/assets/images/sesiones/cumpleaños/grid-1.webp';
import Grid2 from '@/assets/images/sesiones/cumpleaños/grid-2.webp';
import Grid3 from '@/assets/images/sesiones/cumpleaños/grid-3.webp';
import Grid4 from '@/assets/images/sesiones/cumpleaños/grid-4.webp';
import Grid5 from '@/assets/images/sesiones/cumpleaños/grid-5.webp';
import Primary from '@/assets/images/sesiones/cumpleaños/primary.webp';
import BackgroundHero from '@/components/Sections/BackgroundHero.astro';
import SecondaryBento from '@/components/Sections/SecondaryBento.astro';
import SecondaryTextImage from '@/components/Sections/SecondaryTextImage.astro';
import Layout from '@/layouts/Layout.astro';

const primaryImage = {
  image: Primary,
  alt: 'Cumpleañera con pose pensativa',
};

const bentoImages = [
  { image: Grid1, alt: 'Cumpleañera posando entre dos muros blancos' },
  { image: Grid2, alt: 'Rostro de la cumpleañera sonriendo a la cámara' },
  { image: Grid3, alt: 'Cumpleañera posando frente a una puerta de madera' },
  {
    image: Grid4,
    alt: 'Cumpleañera posando mientras sostiene un cuenco artesanal',
  },
  { image: Grid5, alt: 'Cumpleañera sosteniendo un cuenco artesanal' },
];
---

<Layout>
  <BackgroundHero backdrop="/images/background/cumpleaños.webp">
    <h1
      class="text-light-lily anim-title text-header-1-mobile xl:text-header-1 leading-header font-tanker absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 text-center uppercase md:max-w-xl"
    >
      Sesión de cumpleaños
    </h1>
  </BackgroundHero>

  <SecondaryTextImage
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    image={primaryImage}
  />

  <SecondaryBento
    title="Lorem ipsum dolor sit"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis."
    buttonLabel="¡Agenda ahora!"
    images={bentoImages}
  />
</Layout>
